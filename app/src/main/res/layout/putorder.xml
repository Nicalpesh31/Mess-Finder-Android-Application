<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Mess Finder"
        android:textColor="#000000"
        android:textSize="90px" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Put Your Orded Here"
        android:textColor="#000000"
        android:textSize="30px" />

    <EditText
        android:id="@+id/address"
        android:layout_width="429dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Tiffin Dealivary Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/noofdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter For How Many Days you want it"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/putorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonback"
        android:text="Put Order"
        android:textColor="#ffffff" />
</LinearLayout>
